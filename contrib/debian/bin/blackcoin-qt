#!/bin/sh

set -e

umask 077

basedir=~/.Radium
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/Radium.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Radium does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/Radium/Radium-qt "$@"
